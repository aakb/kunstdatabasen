{%- block vich_file_row -%}
    {%- set force_error = true -%}
    {# twigcs use-var force_error #}
    {{- block('form_row') -}}
{%- endblock -%}

{%- block vich_file_widget -%}
    <div class="vich-file">
        {{- form_widget(form.file) -}}
        {%- if form.delete is defined -%}
            {{- form_row(form.delete) -}}
        {%- endif -%}

        {%- if download_uri -%}
            <a href="{{ asset_helper is same as(true) ? asset(download_uri) : download_uri }}" download>
                {{ translation_domain is same as(false) ? download_label : download_label|trans({}, translation_domain) }}
            </a>
        {%- endif -%}
    </div>
{%- endblock -%}

{%- block vich_image_row -%}
    {%- set force_error = true -%}
    {# twigcs use-var force_error #}
    {{- block('form_row') -}}
{%- endblock -%}

{%- block vich_image_widget -%}
    <div class="row vich-image">
        <div class="col-4">
            {%- if image_uri -%}
                <a href="{{ asset_helper is same as(true) ? asset(image_uri) : image_uri }}" download>
                    <img class="img-fluid" src="{{ asset_helper is same as(true) ? asset(image_uri) : image_uri }}" alt="" />
                </a>
            {%- endif -%}
        </div>
        <div class="col">
            {{- form_widget(form.file) -}}
            <p>TODO: Remove "form.label.delete" checkbox</p>
            {%- if form.delete is defined -%}
                {{- form_row(form.delete) -}}

            {%- endif -%}

            {%- if download_uri -%}
                <a href="{{ asset_helper is same as(true) ? asset(download_uri) : download_uri }}" download class="btn btn-dark btn-sm">
                    {{ translation_domain is same as(false) ? download_label : download_label|trans({}, translation_domain) }}
                </a>
            {%- endif -%}
            <p>TODO: move "Primary image" checkbox and "Remove image" button in here</p>
        </div>
    </div>
{%- endblock -%}

{%- block vich_file_label -%}
    {%- set label = label|trans|default(label) -%}
    {{- block('form_label') -}}
{%- endblock -%}
