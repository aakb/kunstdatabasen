<div class="col-auto d-flex flex-column pt-3">
    <div class="row mb-5">
        <div class="col">
            <a href="index" class="mt-3">
                <i class="fas fa-palette mr-1"></i><span class="text-dark">{{ data.brandShort }}</span></a>
        </div>
        <div class="col-auto ml-auto">
            <a name="" id="" class="btn" href="#" role="button">
                <i class="fas fa-search" aria-hidden="true"></i>
                <span class="sr-only">{{ "Søg"|trans }}</span>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <ul class="nav flex-column">
                <li class="nav-item">
                    {% for menuItem in menuItems %}
                        <a class="nav-link active" href="#">
                            <i class="fas fa-mountain mr-1"></i>Værker
                        </a>
                    {% endfor %}
                </li>
            </ul>
        </div>
    </div>
    <div class="row mt-auto position-sticky">
        <div class="col">
            <p>{{ data.user.username }}</p>
            <p>{{ data.user.email }}</p>
        </div>
    </div>
</div>
