<div class="container">
  <div class="row my-3">
    <div class="col">
      <a href="{{ indexLink ?: '' }}"><span class="text-secondary" aria-hidden="true">&laquo;</span> {{ 'frontend.back_to_list'|trans }}</a>
    </div>
  </div>
  <div class="row art-details">
    <div class="col-md-12 mb-3">
      <label for="detailsTitle">{{ 'frontend.artwork.title'|trans }}</label>
      <h1 id="detailsTitle">{{ data.artwork.title }}</h1>
    </div>
    <div class="col-md-3">
      <img src="{{ asset(data.artwork.img) }}" alt="" class="img-fluid"/>
    </div>
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-4">
          <label for="detailsArtist">{{ 'frontend.artwork.artist'|trans }}</label>
          <p>{{ data.artwork.artist }}</p>
        </div>
        <div class="col-md-4">
          <label for="detailsType">{{ 'frontend.artwork.type'|trans }}</label>
          <p>{{ data.artwork.type }}</p>
        </div>
        <div class="col-md-4">
          <label for="detailsDimensions">{{ 'frontend.artwork.dimensions'|trans }}</label>
          <p>{{ data.artwork.dimensions }}</p>
        </div>
        <div class="col-md-4">
          <label for="detailsComment">{{ 'frontend.artwork.comment'|trans }}</label>
          <p>{{ data.artwork.comment }}</p>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-12">
          <h2 class="h4 border-bottom pb-2">{{ 'frontend.artwork.location'|trans }}</h2>
        </div>
        <div class="col-md-4">
          <label for="detailsDepartment">{{ 'frontend.artwork.department'|trans }}</label>
          <p>{{ data.artwork.department }}</p>
        </div>
        <div class="col-md-4">
          <label for="detailsBuilding">{{ 'frontend.artwork.building'|trans }}</label>
          <p>{{ data.artwork.building }}</p>
        </div>
        <div class="col-md-4">
          <label for="detailsGeo">{{ 'frontend.artwork.geo'|trans }}</label>
          <p>{{ data.artwork.geo }}</p>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-12">
          <h2 class="h4 border-bottom pb-2">{{ 'frontend.artwork.further_information'|trans }}</h2>
        </div>
        <div class="col-md-4">
          <label for="detailsArtNo">{{ 'frontend.artwork.art_serial'|trans }}</label>
          <p>{{ data.artwork.artNo }}</p>
        </div>
        <div class="col-md-4">
          <label for="detailsCategory">{{ 'frontend.artwork.category'|trans }}</label>
          <p>{{ data.artwork.category }}</p>
        </div>
        <div class="col-md-4">
          <label for="detailsPrice">{{ 'frontend.artwork.purchase_price'|trans }}</label>
          <p>{{ data.artwork.price }}</p>
        </div>
        <div class="col-md-4">
          <label for="detailsProductionYear">{{ 'frontend.artwork.production_year'|trans }}</label>
          <p>{{ data.artwork.productionYear }}</p>
        </div>
        <div class="col-md-4">
          <label for="detailsEstimatedValue">{{ 'frontend.artwork.assessment_price'|trans }}</label>
          <p>{{ data.artwork.estimatedValue }}</p>
        </div>
        <div class="col-md-4">
          <label for="detailsEstimatedValue">{{ 'frontend.artwork.assessment_date'|trans }}</label>
          <p>{{ data.artwork.estimatedValueDate }}</p>
        </div>
      </div>
    </div>
  </div>
</div>
