
{{ form_start(form) }}
<div class="row" id="filters">
    <div class="col-md-4">
        <div class="form-group">
            {{ form_row(form.search) }}
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            {{ form_row(form.type) }}
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            {{ form_row(form.building) }}
        </div>
    </div>
    <div class="col-md-2 pt-md-2 order-last order-md-1">
        <button type="submit" class="btn btn-primary btn-block mt-md-4 mb-3 mb-md-0">{{ 'search.submit'|trans }}</button>
    </div>
    <div class="col-12 order-md-2">
        <div class="collapse" id="filtersAdvanced">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_row(form.width) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_row(form.height) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="filtersYear">{{ 'filters.year'|trans }}</label>
                        <div class="row">
                            <div class="col">
                                {{ form_row(form.yearFrom) }}
                            </div>
                            <div class="col">
                                {{ form_row(form.yearTo) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="btn mb-3 btn-block" type="button" data-toggle="collapse" data-target="#filtersAdvanced" aria-expanded="false" aria-controls="contentId">
            <span>{{ 'filters.show_advanced'|trans }}</span>
            <span class="true">{{ 'filters.hide_advanced'|trans }}</span>
        </button>
    </div>
</div>

{{ form_rest(form) }}

{{ form_end(form) }}
