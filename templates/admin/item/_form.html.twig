{{ form_start(form) }}
    <div class="row mt-5">
        <div class="col-md-12 mb-3">
            <h2 class="h5">{{ 'Common'|trans }}</h2>
        </div>
        <div class="col-md-4">
            {{ form_row(form.type) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.organization) }}
        </div>
        <div class="col-md-4">
            {# TODO: Add status eg. avalibility #}
            Status
            {# {{ form_row(form.status) }} #}
        </div>
        <div class="col-md-12">
            {{ form_row(form.name) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.description) }}
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-12 mb-3">
            <h2 class="h5">{{ 'Art'|trans }}</h2>
        </div>
        <div class="col-md-4">
            {{ form_row(form.artist) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.artSerial) }}
        </div>
        <div class="col-6 col-md-4">
            {{ form_row(form.purchasePrice) }}
        </div>
        <div class="col-6 col-md-4">
            {{ form_row(form.productionYear) }}
        </div>
        <div class="col-8 col-md-4">
            {# TODO: Change date format to single input with default popoverpicker(html5 default?). #}
            {{ form_row(form.assessmentDate) }}
        </div>
        <div class="col-4 col-md-4">
            {{ form_row(form.assessmentPrice) }}
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-12 mb-3">
            <h2 class="h5">{{ 'Placement'|trans }}</h2>
        </div>
        <div class="col-md-4">
            {{ form_row(form.location) }}
        </div>
        <div class="col-8 col-md-4">
            {{ form_row(form.building) }}
        </div>
        <div class="col-4 col-md-4">
            {{ form_row(form.room) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.address) }}
        </div>
        <div class="col-4 col-md-2">
            {{ form_row(form.postalCode) }}
        </div>
        <div class="col-8 col-md-4">
            {{ form_row(form.city) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.publiclyAccessible) }}
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-12 mb-3">
            <h2 class="h5">{{ 'Attributes'|trans }}</h2>
        </div>
        <div class="col-md-2">
            {{ form_row(form.width) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.height) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.depth) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.diameter) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.weight) }}
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-12 mb-3">
            <h2 class="h5">{{ 'Images'|trans }}</h2>
        </div>
        <div class="col-md-12">
            <ul class="images list-unstyled" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}">
                {% for image in form.images %}
                    <li class="media">{{ form_row(image) }}</li>
                {% endfor %}
             </ul>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-12 mb-3">
            <h2 class="h5">{{ 'Extra'|trans }}</h2>
        </div>
        <div class="col-md-12">
            {{ form_row(form.geo) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.comment) }}
        </div>
        <div class="col-md-12">
            {{ form_rest(form) }}
        </div>
    </div>
    <nav class="navbar navbar-expand-sm fixed-top navbar-light bg-white">
        <a class="text-small" href="{{ path('artwork_index') }}"><i class="fas fa-arrow-left mr-1"></i>{{ 'VÃ¦rker'|trans }}</a>
        <div class="ml-auto">
            <button class="btn btn-primary px-5">{{ button_label|default('Save') }}</button>
        </div>
    </nav>
{{ form_end(form) }}
