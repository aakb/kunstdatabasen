<div class="col-auto d-flex flex-column pt-3">
    <div class="row mb-5">
        <div class="col">
            <a href="{{ path('admin') }}" class="mt-3">
                <i class="fas fa-palette mr-1"></i><span class="text-dark">{{ brandShort }}</span></a>
        </div>
        <div class="col-auto ml-auto">
            <a id="" class="btn" href="#" role="button">
                <i class="fas fa-search" aria-hidden="true"></i>
                <span class="sr-only">{{ 'admin.sidebar.search'|trans }}</span>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <ul class="nav flex-column">
                <li class="nav-item">
                    {% for menuItem in menuItems %}
                        <a class="nav-link{{ menuItem.active ? ' active' : '' }}" href="{{ menuItem.link }}">
                            <i class="fas {{ menuItem.icon }} mr-1"></i>{{ menuItem.title }}
                        </a>
                    {% endfor %}
                </li>
            </ul>
        </div>
    </div>
    <div class="row mt-auto position-sticky">
        <div class="col">
            <p>{{ user.email }}</p>
        </div>
    </div>
</div>
